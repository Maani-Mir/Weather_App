                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/time_rise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="115dp"
                android:layout_marginTop="473dp"
                android:text="5:29 am"
                android:textColor="@color/white"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"


                />

            <View
                android:id="@+id/secondHorizViewTodayDet"
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_marginStart="13dp"
                android:layout_marginTop="512dp"
                android:layout_marginEnd="229dp"
                android:layout_marginBottom="385dp"
                android:background="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/time_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="115dp"
                android:layout_marginTop="522dp"
                android:text="6:45 am"
                android:textColor="@color/white"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:id="@+id/sun_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="522dp"
                android:text="Set"
                android:textColor="@color/white"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/thirdVertiView"
                android:layout_width="1dp"
                android:layout_height="match_parent"

                android:layout_marginStart="200dp"
                android:layout_marginTop="408dp"

                android:layout_marginBottom="55dp"
                android:background="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <ImageView
                android:id="@+id/image_moon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="219dp"
                android:layout_marginTop="400dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/moon_50" />

            <TextView
                android:id="@+id/hrs_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="355dp"
                android:layout_marginTop="405dp"
                android:text="13hrs"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:id="@+id/mins_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="345dp"
                android:layout_marginTop="425dp"
                android:text="18mins"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <View
                android:id="@+id/thirdHorizViewTodayDet"
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_marginStart="219dp"
                android:layout_marginTop="460dp"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="385dp"
                android:background="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/moon_rise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="219dp"
                android:layout_marginTop="473dp"
                android:text="Rise"
                android:textColor="@color/white"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/time_rise_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="318dp"
                android:layout_marginTop="473dp"
                android:text="10:08 am"
                android:textColor="@color/white"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <View
                android:id="@+id/fourthHorizViewTodayDet"
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_marginStart="219dp"
                android:layout_marginTop="512dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="385dp"
                android:background="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/moon_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="219dp"
                android:layout_marginTop="522dp"
                android:text="Set"
                android:textColor="@color/white"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/time_set_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="318dp"
                android:layout_marginTop="522dp"
                android:text="11:45 am"
                android:textColor="@color/white"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />




        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

